# A example of Ansible Invetery
# Some useful parameters:
# - ansible_ssh_port
# - ansible_ssh_user
# - ansible_ssh_private_key_file
# Check out http://www.ansibleworks.com/docs/patterns.html#list-of-reserved-inventory-parameters
# for all possible parameters

localhost              ansible_connection=local

[cloud]
cloud001.example.com  ansible_ssh_user=root  ansible_ssh_private_key_file=~/.ssh/some_key
cloud002.aliyun.com upgrade_source_use_template=true debian_release=testing

[digitalocean]
do001.example.com

[linode]
ln001.example.com

[countly]
countly.A_HOST_WITH_LARGE_MEMORY.com ansible_ssh_user=root set_hostname=false

[gitlab]
git.A_HOST_WITH_LARGE_MEMORY.com ansible_ssh_user=root

[jenkins]
jenkins.A_HOST_WITH_LARGE_MEMORY.com

[jenkins:vars]
jenkins_ssh_known_hosts=["git.A_HOST_WITH_LARGE_MEMORY.com", "github.com", "bitbucket.com"]

[cow_backend]
do00[1..3].example.com

[cow_backend:vars]
cow_backend_port=9635
cow_password=cow-very-long-password-5123561

[cow_frontend]
localhost

[cow_frontend:vars]
cow_frontend_port=9820
cow_password=cow-very-long-password-5123561
cow_backend_servers=["do001.example.com", "do002.example.com", "do003.example.com"]

[shadowsocks]
ln001.example.com

[shadowsocks:vars]
password=superlongpassword203985
